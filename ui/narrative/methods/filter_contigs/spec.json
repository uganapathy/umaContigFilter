{
    "ver": "0.0.1",
    "authors": [
        "umaganapathyswork"
    ],
    "contact": "https://kbase.us/contact-us/",
    "categories": ["active"],
    "widgets": {
        "input": null,
        "output": "no-display"
    },
    "parameters": [ 
        {
            "id": "assembly_input_ref",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "valid_ws_types": [ "KBaseGenomeAnnotations.Assembly", "KBaseGenomes.ContigSet" ]
            }
        },
        {
            "id": "min_length",
            "optional": true,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "validate_as": "int",
                "min_integer" : 0
            }
        },
	{
            "id": "mink_arg",
            "optional": false,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "20" ],
            "field_type": "text",
            "text_options": {
                "validate_as" : "int",
	        "min_int" : 1,
		"max_int" : 124
            }
        },
        {
            "id": "maxk_arg",
            "optional": false,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "100" ],
            "field_type": "text",
            "text_options": {
                "validate_as" : "int",
                "min_int" : 2,
		"max_int" : 124
            }
        },
        {
            "id": "step_arg",
            "optional": false,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "20" ],
            "field_type": "text",
            "text_options": {
                "validate_as" : "int",
		"min_int" : 1
            }
        },
        {
            "id" : "extra_params",
            "optional" : true,
            "advanced" : true,
            "allow_multiple" : true,
            "default_values" : [ "" ],
            "field_type" : "text",
            "text_options" : { }
        }
    ],

    "parameter-groups": [	
	{
		"id": "kmer_args",
		"parameters": ["mink_arg", "maxk_arg", "step_arg"],
                "optional": true,
	        "advanced": true,
		"allow_multiple": false,
		"with_border": true
	}
    ],

   "behavior": {
        "service-mapping": {
            "url": "",
            "name":"umaContigFilter",
            "method": "filter_contigs",
            "input_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                },
                {
                    "input_parameter": "assembly_input_ref",
                    "target_property": "assembly_input_ref",
                    "target_type_transform": "resolved-ref"
                },
                {
                    "input_parameter": "min_length",
                    "target_property": "min_length"
                },
                {
                    "input_parameter": "kmer_args",
                    "target_property": "kmer_args"
                },
                {
                    "input_parameter": "extra_params",
                    "target_property": "extra_params"
                }
            ],
            "output_mapping": [
                {
                    "service_method_output_path": [0,"report_name"],
                    "target_property": "report_name"
                },
                {
                    "service_method_output_path": [0,"report_ref"],
                    "target_property": "report_ref"
                },
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                }
            ]
        }
    },
    "job_id_output_field": "docker"
}
